{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": [
      "bun-types"
    ],
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}